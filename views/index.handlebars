<div class="jumbotron jumbotron-fluid" id="jumbotron">
  <div class="container">
    <h1 class="display-4">Burger Time!</h1>
    <p class="lead">Choose a burger or make a burger, then devour it!</p>
  </div>
</div>

<div class="container-fluid">
  <div class="row">
    <div class="col-6">
        <h2>Burger Menu</h2>
        <ul>
          {{#each burgers}}
            {{#unless this.devoured}}
            <li>
              {{this.id}}.
              {{this.burger_name}}
                  <button type="submit" class="eatBurger" data-id={{this.id}}>DEVOUR IT!</button>
                </form>
              </li>
            {{/unless}}
          {{/each}}
        </ul>
    </div>
    <div class="col-6">
        <h2>Burgers Devoured</h2>
        <ul>
          {{#each burgers}}
            {{#if this.devoured}}
            <li>
              {{this.id}}
              {{this.burger_name}}
                <button type="submit" class="delBurger" data-id={{this.id}}>Remove from Menu</button>
            </li>
            {{/if}}
          {{/each}}
        </ul>
      </div>
    </div>

  <div class="row">
    <div class="col-12 form" >
        <h2>Create your own Burger:</h2>
        <form class="create-update-form">

          <div class="form-group newBurger">
            <label for="auth">New Burger:</label>
            <input type="text" id="newBurger" name="burger_name" value="">
          </div>

          <button type="submit">Create Burger</button>
        </form>
      </div>
    </div>

</div>